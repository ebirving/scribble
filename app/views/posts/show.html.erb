<div class= "post">
  <div class= "post_title">
    <%= @post.title %>
  </div>

  <div class= "byline">
    Updated by <%=@post.author%> <%=time_ago_in_words(@post.updated_at)%> ago
  </div>

  <div class= "post_content">
    <%= @post.content %>
  </div>

</div>
<%= link_to "Edit This Post", edit_post_path %>
<h3>Comments</h3>
<div>
  <% @comments.each do |comment| %>
    <%=comment.content%> - <%=comment.author%> - <%=comment.created_at.strftime("%A, %B %d, %Y - %I:%M %p %Z")%>
    <%= link_to "Edit This Comment", edit_post_comment_path(@post, comment) %>
<%end %>
</div>

<h3>Have Your Say</h3>
<%= form_for [@post, @comment] do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>

  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.submit %>
<% end %>

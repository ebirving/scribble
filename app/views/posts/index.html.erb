<!-- Figure out how to order these by created by date/time AND do an after the jump char limit-->
<div>
  <% @posts.each do |post| %>
    <div class= "post">
      <div>
        <%=link_to "#{post.title}", post%>
      </div>

      <div>
        <%=truncate(post.content, length: 280)%><%= link_to "Keep Reading", post_path(post) %>
      </div>

      <div>
        <% if post.created_at > post.updated_at %>
          Posted by <%=post.author%> <%=post.created_at.strftime("on %A, %B %d, %Y at %I:%M %p")%>
        <% else %>
          Updated by <%=post.author%> <%=post.updated_at.strftime("on %A, %B %d, %Y at %I:%M %p")%>
        <% end %>
      </div>
    </div>
  <%end %>
</div>
